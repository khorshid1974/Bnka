@page
@model Bnka.Pages.ParentFolder.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Parent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Parent.Id" />
            <div class="form-group">
                <label asp-for="Parent.FullName" class="control-label"></label>
                <input asp-for="Parent.FullName" class="form-control" />
                <span asp-validation-for="Parent.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parent.Phone" class="control-label"></label>
                <input asp-for="Parent.Phone" class="form-control" />
                <span asp-validation-for="Parent.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parent.DOB" class="control-label"></label>
                <input asp-for="Parent.DOB" class="form-control" />
                <span asp-validation-for="Parent.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parent.Gender" class="control-label"></label>
                <select asp-for="Parent.Gender" class="form-control"></select>
                <span asp-validation-for="Parent.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parent.PlaceId" class="control-label"></label>
                <select asp-for="Parent.PlaceId" class="form-control" asp-items="ViewBag.PlaceId"></select>
                <span asp-validation-for="Parent.PlaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parent.NationalityId" class="control-label"></label>
                <select asp-for="Parent.NationalityId" class="form-control" asp-items="ViewBag.NationalityId"></select>
                <span asp-validation-for="Parent.NationalityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
