@page
@model Bnka.Pages.ParentFolder.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Parent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Parent.FullName" class="control-label"></label>
                <input asp-for="Parent.FullName" class="form-control" />
                <span asp-validation-for="Parent.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parent.Phone" class="control-label"></label>
                <input asp-for="Parent.Phone" class="form-control" />
                <span asp-validation-for="Parent.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parent.DOB" class="control-label"></label>
                <input asp-for="Parent.DOB" class="form-control" />
                <span asp-validation-for="Parent.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parent.Gender" class="control-label"></label>
                <select asp-for="Parent.Gender" class="form-control">
                    <option value="0" selected>Male</option>
                    <option value="1">Female</option>
                </select>
                <span asp-validation-for="Parent.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label"> Place Name </label>
                <select asp-for="Parent.PlaceId" class ="form-control" >
                    <option value="0" disabled>Select Please</option>
                    @foreach (var item in Model.PlaceList)
                    {
                        <option value="@item.value">@item.text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label  class="control-label">Natioality</label>
                <select asp-for="Parent.NationalityId" class ="form-control" >
                    <option value="0" disabled>Select Please</option>
                    @foreach (var item in Model.NationalityList)
                    {
                        <option value="@item.value">@item.text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Parent.Photo" class="control-label"></label>
                <input id="ImagePhoto" name="ImagePhoto" type="file" class="form-control" />
             </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
